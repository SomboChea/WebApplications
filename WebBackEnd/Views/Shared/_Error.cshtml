<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["title"] | Error</title>
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <partial name="_BackEndStyles" />

</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
            <div class='content-wrapper d-flex align-items-center text-center error-page @ViewData["bgcolor_name"] '>
                <div class="row flex-grow">
                    <div class="col-lg-7 mx-auto text-white">
                        <div class="row align-items-center d-flex flex-row">
                            <div class="col-lg-6 text-lg-right pr-lg-4">
                                <h1 class="display-1 mb-0">@ViewData["error_code"]</h1>
                            </div>
                            <div class="col-lg-6 error-page-divider text-lg-left pl-lg-4">
                                <h2>SORRY!</h2>
                                <h3 class="font-weight-light">@ViewData["error_msg"]</h3>
                            </div>
                        </div>
                        <!-- Error Footer -->
                        <partial name="_Error_Footer" />
                    </div>
                </div>
            </div>

            @RenderBody()
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    
    <partial name="_BackEndScripts" />
</body>

</html>